<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0" x:Class="WPFWhatsMyRun.MainWindow"
        Title="MainWindow" Height="800" Width="800">
    <Grid Loaded="Grid_Loaded">

        <d3:ChartPlotter Name="plotter" Margin="10,10,20,10">
            <d3:ChartPlotter.HorizontalAxis>
                <d3:HorizontalDateTimeAxis Name="dateAxis" />
            </d3:ChartPlotter.HorizontalAxis>
            
            <d3:ChartPlotter.VerticalAxis>
                <d3:VerticalTimeSpanAxis Name="countAxis" />
            </d3:ChartPlotter.VerticalAxis>
            
            <d3:Header Content="Run graph for runs 6miles" />
            <d3:VerticalAxisTitle Content="Time of each mile" />
            <d3:HorizontalAxisTitle Content="Date" />
        </d3:ChartPlotter>

    </Grid>
</Window>
